<small class="d-block text-right mt-3">
    {% if is_granted('edit', post) %}

        <a href="{{ path('micro_post_edit', {'id':post.id}) }}">Edit</a>
    {% endif %}

    {% if is_granted('delete', post) %}
        <a href="{{ path('micro_post_delete', {'id':post.id}) }}">Delete</a>
    {% endif %}
</small>
<div class="media text-muted pt-3">
    {% set initLetters = post.user.fullname | split(' ') %}
    <img data-src="holder.js/32x32?text={{ attribute(initLetters, 0) | first }}{{ attribute(initLetters, 1) | first }}&bg=e83e8c&fg=fff&size=8"
         alt="" class="mr-2 rounded" src="">
    <p class="media-body pb-3 mb-0 small lh-125 border-bottom border-gray">
                <span class="d-block">
                    <a class="d-block"
                       href="{{ path('micro_post_by_user', {'username': post.user.username, 'post': post}) }}">
                        <strong class="text-gray-dark">@{{ post.user.username }}</strong></a>
                    <small>Â·        {{ post.time | date('Y-m-d') }}</small>
                </span>
        <a class="text-decoration-none text-dark" href="{{ path('micro_post_show', {'id': post.id}) }}">
            {{ post.text }}
        </a>
    </p>

</div>

